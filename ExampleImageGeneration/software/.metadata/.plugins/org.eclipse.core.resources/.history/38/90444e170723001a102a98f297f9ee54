/**
 ******************************************************************************
 * Include Files
 ******************************************************************************
 **/
#include <stdio.h>
#include "platform.h"
#include "xil_printf.h"
#include "xparameters.h"
#include "axiImage.h"
#include "img/"

/**
 ******************************************************************************
 * Main function
 ******************************************************************************
 **/
int main()
{
  u8 testData[256][256][3] = {{0, 0, 0}, {0, 1, 2}};
  init_platform();

  //print("Hello World\n\r");



  // Test Data
  while (1)
  {
    for (u16 h = 0; h < 256; ++h)
    {
      for (u16 v = 0; v < 256; ++v)
      {
        testData[h][v][0] = h;
        testData[h][v][1] = h;
        testData[h][v][2] = h;
      }
    }

    AXIIMAGE_SendImageRGB888(256, 256, IMAGE_smiley_bmp);
  }



  cleanup_platform();
  return 0;
}
