#ifndef _AXIIMAGE_H
#define _AXIIMAGE_H

/**
 ******************************************************************************
 * Define the registers
 ******************************************************************************
 **/
enum {
  REG_HEIGHT = XPAR_AXIIMAGE_0_BASEADDR,
  REG_WIDTH = XPAR_AXIIMAGE_0_BASEADDR + 0x04,
  REG_COLOR = XPAR_AXIIMAGE_0_BASEADDR + 0x08
};

#endif // _AXIIMAGE_H
